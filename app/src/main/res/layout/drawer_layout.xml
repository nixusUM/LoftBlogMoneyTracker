<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:orientation="vertical"
    android:paddingTop="@dimen/drawer_toppadding"
    android:background="@drawable/drawer_patt"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_drawer"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/field_size"
            android:text="@string/name_in_drawer"
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/field_size"
            android:layout_marginTop="@dimen/margintop_txt"
            android:text="@string/email"
            android:textSize="@dimen/text_size"
            android:textStyle="normal" />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/ava_size"
        android:layout_height="@dimen/ava_size"
        android:layout_marginLeft="@dimen/field_size"
        android:layout_marginTop="@dimen/field_size"
        android:id="@+id/circleView"
        />
</RelativeLayout>